<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payment_Type_Cannot_be_NULL</fullName>
    <active>false</active>
    <errorConditionFormula>AND( NOT( ISBLANK( Amount_Received__c ) ), 
ISPICKVAL(Payment_Type__c, &apos;&apos;) )</errorConditionFormula>
    <errorDisplayField>Payment_Type__c</errorDisplayField>
    <errorMessage>Payment Type Cannot be EMPTY when Amount is Received</errorMessage>
</ValidationRule>
